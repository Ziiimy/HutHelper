<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

   <include layout="@layout/customtoolbar"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
        android:id="@+id/rl_user_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text=""
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="12dp"
            android:src="#efefef"
            android:layout_below="@+id/tv_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
        android:id="@+id/rl_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="点击可修改"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="12dp"
            android:src="#efefef"
            android:layout_below="@+id/tv_user_password"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
        android:id="@+id/rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            android:text="助手"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="12dp"
            android:src="#efefef"
            android:layout_below="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_user_sex"
        android:layout_width="match_parent"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="男"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="12dp"
            android:src="#efefef"
            android:layout_below="@+id/tv_user_sex"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_user_num"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="100000000"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="12dp"
            android:src="#efefef"
            android:layout_below="@+id/tv_user_num"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
        android:id="@+id/rl_user_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学院"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计算机与通信学院"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="12dp"
            android:src="#efefef"
            android:layout_below="@+id/tv_user_school"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:background="@color/white"
        android:id="@+id/rl_user_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="软件"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="12dp"
            android:src="#efefef"
            android:layout_below="@+id/tv_user_class"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>

</LinearLayout>