<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

   <include layout="@layout/toolbar_nomenu"/>
    <ImageView
        android:layout_width="match_parent"
        android:background="@color/bg_grey"
        android:layout_height="10dp"
        />

    <RelativeLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:background="@color/white"
        android:id="@+id/rl_user_headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="@color/dull_grey"
            android:textSize="15sp" />

        <ImageView
            android:src="@mipmap/avatar_default"
            android:id="@+id/iv_user_headview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="18sp" />
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@color/line_grey"
            android:layout_below="@+id/iv_user_headview"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:id="@+id/rl_user_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/dull_grey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/light_grey"
            android:textSize="13sp" />
        <ImageView
            android:layout_marginTop="15dp"
            android:src="@color/line_grey"
            android:layout_below="@+id/tv_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:id="@+id/rl_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/dull_grey"
            android:textSize="15sp"  />
        <TextView
            android:id="@+id/tv_user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="点击可修改"
            android:textColor="@color/light_grey"
            android:textSize="13sp" />
    </RelativeLayout>

    <ImageView
        android:background="@color/bg_grey"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:id="@+id/rl_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
            android:text="助手"
            android:textColor="@color/light_grey"
            android:textSize="13sp" />
        <ImageView
            android:layout_marginTop="15dp"
            android:src="@color/line_grey"
            android:layout_below="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/dull_grey"
            android:textSize="15sp"
            android:layout_alignTop="@+id/tv_user_name"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_user_sex"
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="男"
            android:textColor="@color/light_grey"
            android:textSize="13sp"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:src="@color/line_grey"
            android:layout_below="@+id/tv_user_sex"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/dull_grey"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_user_num"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:textColor="@color/dull_grey"
            android:textSize="15sp" />


        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="100000000"
            android:textColor="@color/light_grey"
            android:textSize="13sp" />
        <ImageView
            android:layout_marginTop="15dp"
            android:src="@color/line_grey"
            android:layout_below="@+id/tv_user_num"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:id="@+id/rl_user_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学院"
            android:textColor="@color/dull_grey"
            android:textSize="15sp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计算机与通信学院"
            android:textColor="@color/light_grey"
            android:textSize="13sp"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:src="@color/line_grey"
            android:layout_below="@+id/tv_user_school"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:id="@+id/rl_user_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级"
            android:layout_centerVertical="true"
            android:textColor="@color/dull_grey"
            android:textSize="15sp" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_user_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="软件"
            android:textColor="@color/light_grey"
      />
    </RelativeLayout>

</LinearLayout>