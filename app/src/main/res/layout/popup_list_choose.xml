<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="110dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="24dp"
    android:background="@mipmap/bg_menulist">
    <com.gaop.huthelper.view.RichText
        android:id="@+id/tv_popmenu_add"
        android:layout_gravity="center_horizontal"
        android:textColor="#404040"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="添加失物"
        view:drawable_height="25dp"
        view:drawable_location="left"
        view:drawable_src="@mipmap/ic_add_list"
        view:drawable_width="25dp"
        />

    <com.gaop.huthelper.view.RichText
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_popmenu_mime"
        android:layout_marginTop="20dp"
        android:textColor="#404040"
        android:textSize="@dimen/sp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="我的发布"
        view:drawable_height="25dp"
        view:drawable_location="left"
        view:drawable_src="@mipmap/ic_mine_list"
        view:drawable_width="25dp"
        />

</LinearLayout>