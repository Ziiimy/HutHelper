<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_login"
        android:transitionName="splashtransition" />

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/login_etbg"
        android:orientation="horizontal"
        android:paddingLeft="21dp"
        android:paddingRight="21dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_user_mini" />

        <EditText
            android:id="@+id/et_login_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="学号"
            android:textColor="#cacaca"
            android:textColorHint="#cacaca"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_etbg"
        android:orientation="horizontal"
        android:paddingLeft="21dp"
        android:paddingRight="21dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_password" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:gravity="center"
            android:hint="密码"
            android:password="true"
            android:textColor="#cacaca"
            android:textColorHint="#cacaca"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_sign_in"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="283dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_btnbg"
        android:text="登录"
        android:textColor="#1dbbdb"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_login_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="密码默认为身份证后六位 忘记密码？"
        android:textColor="#cacaca"
        android:textSize="13sp" />

</LinearLayout>