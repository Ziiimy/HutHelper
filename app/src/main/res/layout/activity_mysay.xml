<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_say_empty"
        android:textSize="20sp"
        android:layout_below="@+id/toolbar"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你没有发布任何说说"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#63B8FF"
        android:fitsSystemWindows="true"></android.support.v7.widget.Toolbar>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv_mysaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"></com.github.jdsjlzx.recyclerview.LRecyclerView>
</RelativeLayout>