<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcg_denglu"
    android:orientation="vertical">


    <EditText
        android:id="@+id/et_import_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btn_ok_import"
        android:layout_below="@+id/et_import_num"
        android:layout_marginTop="20dp"
        android:background="@drawable/ed_importdata"
        android:gravity="center"
        android:hint="密码"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:maxLines="1"
        android:password="true"
        android:singleLine="true" />

    <EditText
        android:textColorHint="@color/white"
        android:id="@+id/et_import_num"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ed_importdata"
        android:gravity="center"
        android:hint="学号"
        android:textColor="@color/white"
        android:maxLines="1"
        android:singleLine="true" />

    <Button
        android:alpha="0.5"
        android:id="@+id/btn_ok_import"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_import_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_importdata"
        android:text="登录"
        android:textColor="@color/white" />

</RelativeLayout>