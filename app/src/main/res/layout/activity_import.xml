<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_import"
    android:background="@drawable/bcg_denglu"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon_import"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher2" />

    <EditText
        android:id="@+id/et_import_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btn_ok_import"
        android:layout_below="@+id/et_import_num"
        android:layout_marginTop="20dp"
        android:background="@drawable/ed_importdata"
        android:gravity="center"
        android:hint="密码"
        android:maxLines="1"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/et_import_num"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ed_importdata"
        android:gravity="center"
        android:hint="学号"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btn_ok_import"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_import_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        android:background="@drawable/btn_importdata"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_fotgetpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_ok_import"
        android:layout_below="@+id/btn_ok_import"
        android:paddingRight="19dp"
        android:paddingTop="10dp"
        android:text="忘记密码"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="密码同工大导航，默认身份证后六位"
        android:textColor="@color/white"

        android:textSize="10sp" />

</RelativeLayout>