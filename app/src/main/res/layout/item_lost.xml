<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bgcolor_lost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#acc4e1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/iv_back_lost"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back_new" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="失物详情"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_menu_lost"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_delete" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/imgandtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/tv_text_lost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="4"
                    android:minLines="4"
                    android:paddingTop="10dp"
                    android:text="中午拾得黑色钱包一个，里面右校园卡搭建撒大家看大家爱看打开大家撒开了是大家的卡上京东卡拉斯撒大家卡睡了多久爱思考了就爱上的骄傲是考虑到就卡死的健身卡的骄傲是快乐到家奥斯卡的骄傲是考虑的撒娇看大送健康大数据可大数据都快来撒大家卡数量的大数据库大数据的卡拉是几点开始就爱的开始就爱看的骄傲是看得见的骄傲我肯定就是靠大家撒大家萨克就"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@id/imgandtext"
                android:layout_marginTop="85dp"
                android:background="#efefef" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgandtext"
                android:layout_marginTop="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:id="@+id/context"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="35dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_lostwhat" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="拾到物品"
                                    android:textColor="#404040"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/tv_thing_lost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:text="校园卡"
                                    android:textColor="#404040"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="35dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_time" />

                            <LinearLayout
                                android:layout_marginLeft="25dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="拾到时间"
                                    android:textColor="#404040"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/tv_time_lost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:paddingTop="5dp"
                                    android:text="2016.10.12上午十点"
                                    android:textColor="#404040"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="35dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_locate" />

                            <LinearLayout
                                android:layout_marginLeft="25dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="拾到地点"
                                    android:textColor="#404040"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/tv_where_lost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:text="公共楼412第二排位置"
                                    android:textColor="#404040"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="35dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_tel" />

                            <LinearLayout
                                android:layout_marginLeft="25dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="联系电话"
                                    android:textColor="#404040"
                                    android:textSize="10dp" />

                                <TextView
                                    android:id="@+id/tv_tel_lost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:text="18545862458"
                                    android:textColor="#404040"
                                    android:textSize="16dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/iv_num_lost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/context"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="1111*11"
                    android:textColor="#adadad"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_sendtime_lost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/context"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="2017.05.05/18:54"
                    android:textColor="#adadad"
                    android:textSize="10dp" />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>