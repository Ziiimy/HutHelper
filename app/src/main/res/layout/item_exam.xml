<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/rl_examitem"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="考试名称"
        android:textColor="@color/light_grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_examitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_examitem_name"
        android:layout_marginTop="7dp"
        android:text="考试地点"
        android:textColor="@color/light_grey"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/tv_examitem_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_examitem_name"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/dull_grey"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_examitem_where"
        android:textColor="@color/light_grey"
        android:layout_marginTop="7dp"
        android:text="考试时间"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_examitem_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_examitem_where"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/dull_grey"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_examitem_when"
        android:layout_marginTop="7dp"
        android:text="状态"
        android:textColor="@color/light_grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_examitem_how"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_examitem_when"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/dull_grey"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_examitem_how"
        android:layout_marginTop="7dp"
        android:text="倒计时"
        android:textColor="@color/light_grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_examitem_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_examitem_how"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="@color/dull_grey"
        android:paddingBottom="10dp"
        android:textSize="15sp" />
</RelativeLayout>





