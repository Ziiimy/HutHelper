<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grade"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/transparent">

        <ImageButton
            android:id="@+id/imgbtn_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:paddingTop="@dimen/dp_10"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back_small" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="成绩"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgbtn_toolbar_refresh"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="20dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/dp_10"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_refresh_white" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_grade_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="总览"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp" />

                <com.gaop.huthelper.view.CirclePie
                    android:id="@+id/pie_grade_xf"
                    android:layout_width="152dp"
                    android:layout_height="152dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10" />


                <TextView
                    android:id="@+id/tv_grade_avgjd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_grade_nopassnum"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="综合绩点"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/tv_grade_nopassnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/iv_grade_line"
                    android:layout_marginLeft="12dp"
                    android:text="总挂科数"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10" />

                <ImageView
                    android:id="@+id/iv_grade_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/pie_grade_xf"
                    android:layout_marginTop="15dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/iv_grade_line"
                    android:background="@color/transparent">

                    <RadioGroup
                        android:id="@+id/radio_group_segmented_control"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_grade_xq"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:button="@null"
                            android:checked="true"
                            android:drawableBottom="@drawable/bg_radiobutton_grade"
                            android:drawablePadding="5dp"
                            android:gravity="center_horizontal|top"
                            android:paddingBottom="3dp"
                            android:text="学期"
                            android:textColor="@drawable/tvbg_grade_radio"
                            android:textSize="17dp"
                            tools:checked="true" />

                        <RadioButton
                            android:id="@+id/radio_grade_xn"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:button="@null"
                            android:drawableBottom="@drawable/bg_radiobutton_grade"
                            android:drawablePadding="5dp"
                            android:gravity="center_horizontal|top"
                            android:text="学年"
                            android:textColor="@drawable/tvbg_grade_radio"
                            android:textSize="17dp" />
                    </RadioGroup>
                </LinearLayout>

            </RelativeLayout>


            <com.gaop.huthelper.weiget.WrapContentHeightViewPager
                android:id="@+id/viewpager_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:flipInterval="30"
                android:persistentDrawingCache="animation" />
            <!--  <com.gaop.huthelper.view.ui.LineChartView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp" />-->


            <Button
                android:id="@+id/btn_grade_showall"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_maincolor"
                android:text="查看所有成绩"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_grade_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="你还没有成绩数据"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:visibility="gone" />

</LinearLayout>