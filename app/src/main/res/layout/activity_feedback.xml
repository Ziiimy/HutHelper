<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_bg_maincontent"
        layout="@layout/toolbar_nomenu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_feedback_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言"
            android:textColor="#adadad"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb" />

        <EditText
            android:gravity="left|top"
            android:id="@+id/et_feedbk_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:hint="请输入反馈意见..."
            android:minLines="5"
            android:textColor="#404040"
            android:textColorHint="#404040"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系"
            android:textColor="#adadad"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#dbdbdb" />

        <EditText
            android:gravity="left|top"
            android:id="@+id/et_feedbk_tel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:hint="请输入联系方式以便与你取得联系..."
            android:textColor="#404040"
            android:textColorHint="#404040"
            android:textSize="15dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_feedbk_ok"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_maincolor"
        android:text="提交" />



</LinearLayout>